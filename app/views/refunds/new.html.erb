<div class='form-body'>
  <%= form_for(@order, url: refunds_path, method: 'post', html: {class: 'form-horizontal'}) do |f| %>

  <div class="form-group">
    <div class="col-sm-5">
      <input type='hidden' name="payment_no" value="<%= @order.payment.payment_no %>" />
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5">
      <input type='hidden' name="order_id" value="<%= @order.id %>" />
    </div>
  </div>

  <div class="form-group">
    <label for="total_money" class="col-sm-2 control-label">退款金额</label>
    <div class="col-sm-5">
      <input name="total_money" value="<%= @order.total_money %>" />
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit "点击退款", class: "btn btn-default" %>
    </div>
  </div>
  <% end %>
</div>
