<h1>支付</h1>
<div class="row">
  <div class="container">
    <div class="page-header">
      <h4><i class="fa fa-credit-card"></i> 支付宝付款</h4>
    </div>
    <p>订单号: <%= @payment.orders.map { |order| "<strong>#{order.order_no}</strong>" }.join(', ').html_safe %></p>
    <ul class="list-group">
      <li class="list-group-item">
        <%= image_tag "alipay.png", width: 100 %>
      </li>
    </ul>

    <br />
    <div class="pull-right">
      <%= form_for @payment, url: payment_path(@payment), method: 'put' do |f| %>
        <strong>¥<%= @payment.total_money %></strong>
        <%= f.submit '支付', class: "btn btn-success btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
